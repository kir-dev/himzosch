<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 my-3 rounded relative" id="errors" role="alert">
  <strong class="font-bold">
    <%= pluralize(errors.count, "error") %>
    prohibited this kitchen from being saved:
  </strong>
  <ul class="pl-2"></ul>
  <% errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
